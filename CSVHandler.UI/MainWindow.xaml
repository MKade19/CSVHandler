<mah:MetroWindow x:Class="CSVHandler.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSVHandler.UI"
        xmlns:viewModels="clr-namespace:CSVHandler.UI.ViewModels"
        xmlns:converters="clr-namespace:CSVHandler.UI.Converters"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance viewModels:MainViewModel}"
        Title="CSVHandler" Height="800" Width="1100">
    <Window.Resources>
        <converters:BoolToVisibleConverter x:Key="BoolToVisibleConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </Window.Resources>

    <Grid HorizontalAlignment="Center" Width="1080">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu Height="40" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="16">
            <MenuItem Command="{Binding GoToParserCommand}" Header="Parse csv" Height="33" HorizontalAlignment="Left"/>
            <MenuItem Command="{Binding GoToExportCommand}" Header="Export from db" Height="33" HorizontalAlignment="Left"/>
        </Menu>
        <ContentControl Grid.Row="2" x:Name="ViewContainer" Content="{Binding ActiveView}"/>
    </Grid>
</mah:MetroWindow>
