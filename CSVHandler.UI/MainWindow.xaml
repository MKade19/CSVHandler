<Window x:Class="CSVHandler.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:CSVHandler.UI.ViewModels"
        xmlns:local="clr-namespace:CSVHandler.UI"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance viewModels:MainViewModel}"
        Title="CSVHandler" Height="400" Width="600">
    <Window.CommandBindings>
        <!--<CommandBinding Command="{Binding Path=SaveToDbCommand}" Executed="{Binding SaveToDbCommand_Executed}"/>-->
        <CommandBinding Command="local:WindowCommands.SaveToDbCommand" Executed="CommandBinding_Executed"/>
    </Window.CommandBindings>
    <Grid HorizontalAlignment="Center" Width="480">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Main page" HorizontalAlignment="Center" FontSize="20" VerticalAlignment="Center" FontWeight="Bold"/>
        <StackPanel Margin="0,5,0,5" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Width="480">
            <Label Target="{Binding ElementName=InputFileBox}" Content="Select input file" Margin="0,0,10,0" Height="37" FontSize="16"/>
            <TextBox 
                x:Name="InputFileBox" 
                Margin="0,0,10,0" 
                Width="255" 
                Height="36" 
                FontSize="18"
                IsReadOnly="True"
                Text="{Binding InputFileName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Button 
                x:Name="BrowseInputFileButton"
                Content="Browse" 
                FontSize="16" Height="36" Width="79" 
                Click="BrowseInputFileButton_Click"
                Margin="0,0,10,0"/>
        </StackPanel>
        <StackPanel Margin="5,5,5,5" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button 
                x:Name="SaveToDBButton" 
                Content="Save to database" 
                Margin="0,0,10,0"
                FontSize="16" Height="36" Width="139" 
                Command="local:WindowCommands.SaveToDbCommand"/>
            <Button 
                x:Name="ExportToXMLButton" 
                Content="Export to XML" 
                Margin="0,0,10,0"
                FontSize="16" Height="36" Width="139" 
                />
            <Button 
                x:Name="ExportToExcelButton" 
                Content="Export to Excel" 
                Margin="0,0,10,0"
                FontSize="16" Height="36" Width="139" 
                />
        </StackPanel>
    </Grid>
</Window>
